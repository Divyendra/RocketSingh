<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.google.playservices.placecomplete.SearchPlaceActivity">

    <EditText
        android:id="@+id/placeSearchBar"
        android:hint="Start typing place here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSuggestions"
        android:layout_below="@+id/placeSearchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Hyperlink"
        android:layout_marginBottom="5dp"
        android:text="Suggestions :"/>

    <ListView
        android:id="@+id/placeSuggestionsListView"
        android:layout_below="@+id/tvSuggestions"
        android:layout_above="@+id/googleAttribution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/googleAttribution"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/powered_by_google_light"/>

</RelativeLayout>
