<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:elevation="4dp"
        android:background="@color/color_primary"
        android:orientation="vertical"
        android:id="@+id/driverDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bikerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="top|center_horizontal"
            android:textColor="@color/white"
            tools:text="Karthik Narasimha"/>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:divider="@drawable/vertical_divider_orange"
            android:showDividers="middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:paddingLeft="@dimen/margin_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wheel"
                    />
                <TextView
                    android:id="@+id/bikerVehicleNo"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_sz_xlarge"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/white"
                    android:text="KA BE C4237" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="callBiker">
                <ImageView
                    android:id="@+id/callImage"
                    android:paddingLeft="@dimen/margin_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    />
                <TextView
                    android:id="@+id/bikerPhno"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_sz_xlarge"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/white"
                    android:text="8197908877" />
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            tools:name="com.google.android.gms.maps.SupportMapFragment"/>
        <Button
            android:id="@+id/cancelRequestBtn"
            android:layout_gravity="bottom|center"
            android:layout_width="200dp"
            android:visibility="invisible"
            android:enabled="true"
            android:layout_height="wrap_content"
            style="@style/ButtonPrimaryRS_MAP"
            android:onClick="cancelTrip"
            android:text="Cancel Trip"
            />
    </FrameLayout>
</LinearLayout>