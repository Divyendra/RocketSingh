<resources>

    <style name="RSAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item> <!-- Used for the underline and floating color -->
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <item name="colorControlNormal">@color/color_accent</item> <!-- Used for the underline when not selected -->
        <item name="colorControlActivated">@color/color_control_activated</item> <!-- Underline and floating text when active -->

        <item name="android:windowBackground">@color/grey_lighten_30</item>
        <!--<item name="android:actionBarItemBackground">@drawable/selectable_background_wordpress</item>-->
        <item name="android:actionModeBackground">@color/color_primary_dark</item>
        <!--Below useful for issue :http://stackoverflow.com/a/26450875/4144209 -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Example</item>
    </style>

    <!-- see values-21/styles.xml -->
    <style name="RS.DrawerActivity" parent="RSAppTheme">
    </style>

    <style name="ActionBar.Solid.Example" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_example</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_example</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_example</item>
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>
    <style name="ActionBarTitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPrimaryRS">
        <item name="android:layout_height">@dimen/primary_button_height</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:background">@drawable/selectable_background_btn</item>
        <item name="android:textColor">@color/color_button_text</item>
    </style>

    <style name="ButtonPrimaryRS_MAP">
        <item name="android:layout_height">@dimen/primary_button_height</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:background">@drawable/selectable_background_btninmap</item>
        <item name="android:textColor">@color/color_button_text</item>
    </style>

    <style name="Calypso.Text.Date" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Calypso.Text.Header" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Hyperlink">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/hyperlink_underline</item>
    </style>

    <style name="DialogStyle" parent="@style/Theme.AppCompat.DialogWhenLarge" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:background">@color/white</item>
        <!--Below two to avoid a bug "https://code.google.com/p/android/issues/detail?id=170017 -->
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowNoTitle">false</item>-->
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowIsFloating">false</item>-->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
    </style>

</resources>
